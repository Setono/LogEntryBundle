<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Setono\LogEntryBundle\Entity\LogEntry">
        <property name="level">
            <constraint name="NotBlank">
                <option name="message">setono_log_entry.log_entry.level.not_blank</option>
                <option name="groups">setono_log_entry</option>
            </constraint>
            <constraint name="Choice">
                <option name="callback">getLevels</option>
                <option name="message">setono_log_entry.log_entry.level.choice</option>
                <option name="groups">setono_log_entry</option>
            </constraint>
        </property>
        <property name="message">
            <constraint name="NotBlank">
                <option name="message">setono_log_entry.log_entry.message.not_blank</option>
                <option name="groups">setono_log_entry</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="minMessage">setono_log_entry.log_entry.message.min_length</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
